{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowImportingTsExtensions": false, // Speeds up builds by skipping library type checks
    "strict": true, // Ensure no unnecessary runtime imports
    "declaration": true,
    "emitDeclarationOnly": false,
    "importsNotUsedAsValues": "remove",
    "noEmit": false, // Remove type-only imports from output
    "preserveValueImports": false, // If you're generating declaration files
    "esModuleInterop": true, // For compatibility with CommonJS modules
    "skipLibCheck": true
  },
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"]
}

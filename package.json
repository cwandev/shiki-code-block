{
  "name": "@shiki/block",
  "type": "module",
  "version": "0.0.3",
  "packageManager": "pnpm@9.15.9",
  "description": "A Shiki based Code Block Component âœ¨",
  "author": "Selemondev",
  "private": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/selemondev/shiki-code-block"
  },
  "bugs": {
    "url": "https://github.com/selemondev/shiki-code-block/issues"
  },
  "keywords": [
    "vue3",
    "vue3-component",
    "vue-code-block",
    "typescript",
    "shiki",
    "shiki-code-block",
    "code-block"
  ],
  "scripts": {
    "build:packages": "pnpm -r run build",
    "dev:build": "tsdown --watch ./src/index.ts",
    "dev": "tsx ./src/index.ts",
    "play:dev": "pnpm -C playground dev",
    "play:build": "pnpm -C playground build",
    "biome": "biome check --write",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "generate:components": "pnpm dlx esno scripts/index.ts && pnpm biome",
    "generate:release": "pnpx changelogen@latest --release && git push --follow-tags",
    "generate:major:release": "pnpx changelogen@latest --major && git push --follow-tags",
    "generate:minor:release": "pnpx changelogen@latest --minor && git push --follow-tags",
    "generate:patch:release": "pnpx changelogen@latest --patch && git push --follow-tags",
    "bump:version": "pnpx changelogen@latest --bump",
    "package:beta": "pnpm build:package && pnpm publish --tag beta",
    "package": "pnpm build:package && pnpm publish --access=public"
  },
  "peerDependencies": {
    "vite": "^4.0.0 || ^5.0.0 || ^7.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.3",
    "typescript": "^5.9.2",
    "vite": "^6.3.6",
    "vite-plugin-dts": "^4.5.4"
  },
  "workspaces": [
    "packages/*"
  ]
}
